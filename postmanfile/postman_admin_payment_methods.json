    "item": [
        {
            "name": "List All Payment Methods",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{admin_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/admin/payment-methods?page=1&limit=10",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "admin",
                        "payment-methods"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Create Payment Method for User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{admin_token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"userId\": \"{{target_user_id}}\",\n    \"cardholderName\": \"John Doe Admin\",\n    \"brand\": \"Visa\",\n    \"last4\": \"4242\",\n    \"expiryDate\": \"12/28\",\n    \"isDefault\": true\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/admin/payment-methods",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "admin",
                        "payment-methods"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Update Payment Method",
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{admin_token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"cardholderName\": \"John Doe Updated\",\n    \"expiryDate\": \"01/30\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/admin/payment-methods/{{payment_method_id}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
