{
    "info": {
        "_postman_id": "8b5d3a5e-3d8b-4a5c-9d6e-1f2a3b4c5d6e",
        "name": "Favorite Food System",
        "description": "Production-grade Favorite Food Feed System for Customers and Providers.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Customers",
            "item": [
                {
                    "name": "Add Food to Favorites",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"foodId\": \"PUT_FOOD_OBJECT_ID_HERE\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/favorites",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "favorites"
                            ]
                        },
                        "description": "Add a food item to customer's personal favorites list. One user cannot favorite the same food twice."
                    },
                    "response": []
                },
                {
                    "name": "Get Favorite Feed",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/favorites/feed?page=1&limit=10",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "favorites",
                                "feed"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        },
                        "description": "Fetch the customer's personalized favorite food feed with pagination."
                    },
                    "response": []
                },
                {
                    "name": "Remove from Favorites",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/favorites/:foodId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "favorites",
                                " :foodId"
                            ],
                            "variable": [
                                {
                                    "key": "foodId",
                                    "value": "PUT_FOOD_OBJECT_ID_HERE"
                                }
                            ]
                        },
                        "description": "Remove a specific food item from favorites. Decrements favoriteCount on the food item."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Providers",
            "item": [
                {
                    "name": "Get Food Stats (Popularity & Rating)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/foods/:foodId/stats",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "foods",
                                ":foodId",
                                "stats"
                            ],
                            "variable": [
                                {
                                    "key": "foodId",
                                    "value": "PUT_FOOD_OBJECT_ID_HERE"
                                }
                            ]
                        },
                        "description": "Provider can see how many users favorited a specific food along with its average rating."
                    },
                    "response": []
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api/v1",
            "type": "string"
        },
        {
            "key": "token",
            "value": "YOUR_JWT_ACCESS_TOKEN",
            "type": "string"
        }
    ]
}