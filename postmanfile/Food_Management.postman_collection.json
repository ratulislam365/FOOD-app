{
    "info": {
        "_postman_id": "8b2c4e5d-1f9a-4b7e-a1b2-c3d4e5f67890",
        "name": "EMDR - Food Management",
        "description": "API collection for Provider Food Item Management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Food Item",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"categoryId\": \"YOUR_CATEGORY_ID_HERE\",\n    \"title\": \"Gourmet Beef Burger\",\n    \"image\": \"https://res.cloudinary.com/demo/image/upload/v123456/burger.jpg\",\n    \"calories\": 450,\n    \"productDescription\": \"Premium beef patty with cheddar cheese and special sauce.\",\n    \"baseRevenue\": 12.50,\n    \"serviceFee\": 2.50,\n    \"foodAvailability\": true\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/foods",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "foods"
                    ]
                },
                "description": "Create a new food item under a category. Only available for PROVIDER role."
            },
            "response": []
        },
        {
            "name": "Get All Provider Foods",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/foods",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "foods"
                    ]
                },
                "description": "Get all food items belonging to the logged-in provider."
            },
            "response": []
        },
        {
            "name": "Get Foods by Category",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/foods/category/:categoryId",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "foods",
                        "category",
                        ":categoryId"
                    ],
                    "variable": [
                        {
                            "key": "categoryId",
                            "value": "YOUR_CATEGORY_ID_HERE"
                        }
                    ]
                },
                "description": "Get all food items under a specific category."
            },
            "response": []
        },
        {
            "name": "Update Food Item",
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"Updated Burger Name\",\n    \"baseRevenue\": 14.00,\n    \"foodAvailability\": false\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/foods/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "foods",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": "FOOD_ITEM_ID_HERE"
                        }
                    ]
                },
                "description": "Update food item details. Recalculates final price if baseRevenue or serviceFee changes."
            },
            "response": []
        },
        {
            "name": "Soft Delete Food Item",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/foods/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "foods",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": "FOOD_ITEM_ID_HERE"
                        }
                    ]
                },
                "description": "Disable a food item by setting foodStatus to false."
            },
            "response": []
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api/v1",
            "type": "string"
        },
        {
            "key": "accessToken",
            "value": "YOUR_JWT_TOKEN_HERE",
            "type": "string"
        }
    ]
}