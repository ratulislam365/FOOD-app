        "name": "EMDR - Category Management",
        "description": "API collection for Provider Food Category Management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Category",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"categoryName\": \"Italian Pizza\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/categories",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "categories"
                    ]
                },
                "description": "Create a new food category. Only available for PROVIDER role."
            },
            "response": []
        },
        {
            "name": "Get Provider Categories",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/categories",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "categories"
                    ]
                },
                "description": "Get all categories belonging to the logged-in provider."
            },
            "response": []
        },
        {
            "name": "Update Category",
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"categoryName\": \"Updated Category Name\",\n    \"categoryStatus\": true\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/categories/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "categories",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": "CATEGORY_ID_HERE"
                        }
                    ]
                },
                "description": "Update category name or status."
            },
            "response": []
        },
        {
            "name": "Soft Delete Category",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/categories/:id",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "categories",
                        ":id"
                    ],
                    "variable": [
                        {
                            "key": "id",
                            "value": "CATEGORY_ID_HERE"
                        }
                    ]
                },
                "description": "Disable a category by setting status to false."
            },
            "response": []
        }
