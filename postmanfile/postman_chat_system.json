{
    "info": {
        "_postman_id": "chat-system-expert-v1",
        "name": "EMDR Chat System",
        "description": "Postman collection for the Real-Time Chat System including Inbox, Messages, Read Receipts, and Admin monitoring.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "General Chat",
            "item": [
                {
                    "name": "1. Get My Inbox",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/chats/inbox",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "chats",
                                "inbox"
                            ]
                        },
                        "description": "Fetches the list of all active chat conversations for the logged-in user.\n\n**Returns:**\n- List of rooms\n- Last message preview\n- Unread count per room\n- Participant details"
                    },
                    "response": []
                },
                {
                    "name": "2. Get Messages (History)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/chats/:roomId/messages?page=1&limit=50",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "chats",
                                ":roomId",
                                "messages"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1",
                                    "description": "Pagination page number"
                                },
                                {
                                    "key": "limit",
                                    "value": "50",
                                    "description": "Messages per page"
                                }
                            ],
                            "variable": [
                                {
                                    "key": "roomId",
                                    "value": "65b2f... (Use ID from Inbox)",
                                    "description": "The ID of the ChatRoom"
                                }
                            ]
                        },
                        "description": "Fetches historical messages for a specific chat room.\n\n**Pagination:**\nUses `page` and `limit` query parameters."
                    },
                    "response": []
                },
                {
                    "name": "3. Mark Room as Read",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/chats/:roomId/read",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "chats",
                                ":roomId",
                                "read"
                            ],
                            "variable": [
                                {
                                    "key": "roomId",
                                    "value": "65b2f...",
                                    "description": "The ID of the ChatRoom to mark as read"
                                }
                            ]
                        },
                        "description": "Marks all messages in the specified room as 'Read' by the current user.\nCall this when the user opens the chat UI."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Admin Monitoring",
            "item": [
                {
                    "name": "4. Get All Provider Chats (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/chats/admin/all-provider-chats",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "chats",
                                "admin",
                                "all-provider-chats"
                            ]
                        },
                        "description": "ADMIN ONLY. \nFetches a list of highly active chats involving Providers for monitoring purposes."
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api/v1",
            "type": "string"
        },
        {
            "key": "token",
            "value": "YOUR_JWT_TOKEN_HERE",
            "type": "string"
        }
    ]
}