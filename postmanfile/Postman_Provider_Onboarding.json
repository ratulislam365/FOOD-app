{
    "info": {
        "_postman_id": "provider-onboarding-v1",
        "name": "EMDR Provider Onboarding",
        "description": "API Collection for Provider Signup, Email Verification, and Login flow.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Provider Signup",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"fullName\": \"John Provider\",\n    \"email\": \"provider@example.com\",\n    \"password\": \"SecurePass123\",\n    \"restaurantName\": \"Gourmet Kitchen\",\n    \"phoneNumber\": \"1234567890\",\n    \"streetAddress\": \"456 Chef Avenue\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zipCode\": \"10001\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/provider/signup",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "provider",
                        "signup"
                    ]
                },
                "description": "Registers a new provider and creates their business profile automatically."
            },
            "response": []
        },
        {
            "name": "2. Verify Email",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"provider@example.com\",\n    \"otp\": \"123456\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/verify-email",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "verify-email"
                    ]
                },
                "description": "Verifies the provider's email using the OTP sent during signup."
            },
            "response": []
        },
        {
            "name": "3. Provider Login",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"provider@example.com\",\n    \"password\": \"SecurePass123\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/auth/login",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "auth",
                        "login"
                    ]
                },
                "description": "Login for providers to obtain an access token."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api/v1",
            "type": "string"
        }
    ]
}