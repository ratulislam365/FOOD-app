{
    "info": {
        "_postman_id": "admin-analytics-v1",
        "name": "Admin Dashboard Analytics",
        "description": "Production-grade analytics APIs for Admin Dashboard.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Metrics Overview",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/analytics/overview?filter=month",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "analytics",
                        "overview"
                    ],
                    "query": [
                        {
                            "key": "filter",
                            "value": "month"
                        }
                    ]
                },
                "description": "Returns total orders, revenue, and customers for the selected range."
            },
            "response": []
        },
        {
            "name": "Revenue Trends",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/analytics/revenue?filter=year",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "analytics",
                        "revenue"
                    ],
                    "query": [
                        {
                            "key": "filter",
                            "value": "year"
                        }
                    ]
                },
                "description": "Returns revenue data grouped by intervals (Month, Week, Day, etc.)."
            },
            "response": []
        },
        {
            "name": "Order Volume Analytics",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/analytics/orders?filter=week",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "analytics",
                        "orders"
                    ],
                    "query": [
                        {
                            "key": "filter",
                            "value": "week"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Recent Orders",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adminToken}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/admin/analytics/recent-orders?page=1&limit=5",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "admin",
                        "analytics",
                        "recent-orders"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "5"
                        }
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api/v1"
        },
        {
            "key": "adminToken",
            "value": "ADMIN_JWT_TOKEN"
        }
    ]
}