{
    "info": {
        "_postman_id": "emdr-chat-complete-v2",
        "name": "EMDR Chat System (Complete)",
        "description": "Complete collection for EMDR Chat System including Inbox, Archives, and Read Status.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Get Inbox",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/chat/conversations?limit=20",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "chat",
                        "conversations"
                    ],
                    "query": [
                        {
                            "key": "limit",
                            "value": "20"
                        }
                    ]
                },
                "description": "Fetches active conversations."
            },
            "response": []
        },
        {
            "name": "2. Start Conversation",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"providerId\": \"REPLACE_WITH_PROVIDER_ID\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/chat/conversations",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "chat",
                        "conversations"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "3. Get Single Conversation",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/chat/conversations/:conversationId",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "chat",
                        "conversations",
                        ":conversationId"
                    ],
                    "variable": [
                        {
                            "key": "conversationId",
                            "value": "REPLACE_WITH_ID"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "4. Get Messages",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/chat/conversations/:conversationId/messages?limit=20",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "chat",
                        "conversations",
                        ":conversationId",
                        "messages"
                    ],
                    "query": [
                        {
                            "key": "limit",
                            "value": "20"
                        }
                    ],
                    "variable": [
                        {
                            "key": "conversationId",
                            "value": "REPLACE_WITH_ID"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "5. Archive Conversation",
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"status\": \"ARCHIVED\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/chat/conversations/:conversationId/archive",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "chat",
                        "conversations",
                        ":conversationId",
                        "archive"
                    ],
                    "variable": [
                        {
                            "key": "conversationId",
                            "value": "REPLACE_WITH_ID"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "6. Mark as Read",
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/chat/conversations/:conversationId/read",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "chat",
                        "conversations",
                        ":conversationId",
                        "read"
                    ],
                    "variable": [
                        {
                            "key": "conversationId",
                            "value": "REPLACE_WITH_ID"
                        }
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api",
            "type": "string"
        },
        {
            "key": "token",
            "value": "YOUR_JWT_TOKEN",
            "type": "string"
        }
    ]
}