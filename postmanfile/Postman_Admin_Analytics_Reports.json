    "item": [
        {
            "name": "Get Analytics Reports (Today)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{admin_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/admin/dashboard/reports?filter=today",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "admin",
                        "dashboard",
                        "reports"
                    ],
                    "query": [
                        {
                            "key": "filter",
                            "value": "today"
                        }
                    ]
                },
                "description": "Returns revenue and volume breakdown in 3-hour slots (6AM, 9AM, etc.), top 6 states, and active customer count for today."
            },
            "response": []
        },
