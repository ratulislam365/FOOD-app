{
    "info": {
        "_postman_id": "food-review-system-v1",
        "name": "Food Review System",
        "description": "API collection for creating and retrieving individual food reviews.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create Food Review",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{customerToken}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"orderId\": \"{{completedOrderId}}\",\n    \"foodId\": \"{{foodId}}\",\n    \"rating\": 5,\n    \"comment\": \"The pizza was amazing! Fresh and hot.\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/reviews",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "reviews"
                    ]
                },
                "description": "Submits a review for a specific food item in a completed order."
            },
            "response": []
        },
        {
            "name": "Get All Reviews for Food",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/reviews/food/{{foodId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "reviews",
                        "food",
                        "{{foodId}}"
                    ]
                },
                "description": "Retrieves all reviews for a specific food ID with customer details and total count."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api/v1"
        },
        {
            "key": "customerToken",
            "value": "USER_JWT_HERE"
        },
        {
            "key": "foodId",
            "value": "FOOD_OBJECT_ID_HERE"
        },
        {
            "key": "completedOrderId",
            "value": "ORDER_ID_HERE"
        }
    ]
}