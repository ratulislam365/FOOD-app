{
    "info": {
        "_postman_id": "banner-management-v1",
        "name": "Banner Management System",
        "description": "API for managing promotional banners with time-based visibility and role-based access.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Public",
            "item": [
                {
                    "name": "Get Active Banners",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/banners/active",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "banners",
                                "active"
                            ]
                        },
                        "description": "Returns a list of currently active banners based on status and time range."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Admin",
            "item": [
                {
                    "name": "Create Banner",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Winter Special Offer\",\n    \"bannerImage\": \"https://example.com/banners/winter.jpg\",\n    \"startTime\": \"{{currentISO}}\",\n    \"endTime\": \"{{futureISO}}\",\n    \"status\": \"ACTIVE\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admin/banners",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "banners"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "List All Banners",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/admin/banners?status=ACTIVE&page=1&limit=10",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "banners"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "ACTIVE"
                                },
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Banner",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"status\": \"INACTIVE\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/admin/banners/{{bannerId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "banners",
                                "{{bannerId}}"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Delete Banner (Soft)",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/admin/banners/{{bannerId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "banners",
                                "{{bannerId}}"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api/v1"
        },
        {
            "key": "adminToken",
            "value": "YOUR_ADMIN_JWT_HERE"
        },
        {
            "key": "currentISO",
            "value": "2026-02-07T00:00:00.000Z"
        },
        {
            "key": "futureISO",
            "value": "2026-02-14T00:00:00.000Z"
        },
        {
            "key": "bannerId",
            "value": "BANNER_ID_FROM_CREATE_RESPONSE"
        }
    ]
}