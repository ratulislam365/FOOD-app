{
    "info": {
        "name": "Chatting System API",
        "description": "Comprehensive API collection for the real-time chatting system including inbox, messaging, and media uploads.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000"
        },
        {
            "key": "token",
            "value": "YOUR_JWT_TOKEN_HERE"
        },
        {
            "key": "conversationId",
            "value": "CHAT_ROOM_ID_HERE"
        },
        {
            "key": "receiverId",
            "value": "USER_ID_TO_CHAT_WITH"
        }
    ],
    "item": [
        {
            "name": "Inbox & Conversations",
            "item": [
                {
                    "name": "1. Get All Conversations (Inbox)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/chat/conversations?limit=20",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "chat",
                                "conversations"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "20"
                                }
                            ]
                        },
                        "description": "Fetch all active conversations for the logged-in user."
                    }
                },
                {
                    "name": "2. Start New Conversation",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"providerId\": \"{{receiverId}}\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/chat/conversations",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "chat",
                                "conversations"
                            ]
                        },
                        "description": "Initialize a chat room with a specific provider/user. Returns the conversation object."
                    }
                },
                {
                    "name": "3. Get Single Conversation Details",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/chat/conversations/{{conversationId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "chat",
                                "conversations",
                                "{{conversationId}}"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Messages & Media",
            "item": [
                {
                    "name": "1. Get Conversation Messages",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/chat/conversations/{{conversationId}}/messages?page=1&limit=20",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "chat",
                                "conversations",
                                "{{conversationId}}",
                                "messages"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "20"
                                }
                            ]
                        },
                        "description": "Get paginated messages for a specific chat room."
                    }
                },
                {
                    "name": "2. Send Message (Text + Image)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "form-data",
                            "formdata": [
                                {
                                    "key": "receiverId",
                                    "value": "{{receiverId}}",
                                    "type": "text"
                                },
                                {
                                    "key": "text",
                                    "value": "Hello! How are you?",
                                    "type": "text"
                                },
                                {
                                    "key": "image",
                                    "type": "file",
                                    "src": [],
                                    "description": "Optional: Select an image to upload"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/chat/message/customer-to-provider",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "chat",
                                "message",
                                "customer-to-provider"
                            ]
                        },
                        "description": "Unified endpoint to send text and/or images. Works for different roles: customer-to-provider, provider-to-admin, etc."
                    }
                }
            ]
        },
        {
            "name": "Chat Management",
            "item": [
                {
                    "name": "1. Mark Conversation as Read",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/chat/conversations/{{conversationId}}/read",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "chat",
                                "conversations",
                                "{{conversationId}}",
                                "read"
                            ]
                        }
                    }
                },
                {
                    "name": "2. Archive Conversation",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"status\": \"ARCHIVED\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/chat/conversations/{{conversationId}}/archive",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "chat",
                                "conversations",
                                "{{conversationId}}",
                                "archive"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}