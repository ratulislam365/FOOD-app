{
    "info": {
        "_postman_id": "payment-methods-v1",
        "name": "EMDR - Payment Methods (Secure Stripe Mock)",
        "description": "CRUD for providers/customers to manage their saved cards.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Add Payment Method (Card)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{tempToken}}"
                    },
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"cardholderName\": \"Orlando Laurentius\",\n    \"cardNumber\": \"4242 4242 4242 4242\",\n    \"expiryDate\": \"12/26\",\n    \"cvc\": \"123\",\n    \"isDefault\": true\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/payment-methods",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "payment-methods"
                    ]
                },
                "description": "Simulates adding a card as shown in the UI modal. Automatically detects Brand (Visa/MC)."
            },
            "response": []
        },
        {
            "name": "Get My Saved Cards",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{tempToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/payment-methods",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "payment-methods"
                    ]
                },
                "description": "Lists all saved cards. Cards are returned with 'last4' for security."
            },
            "response": []
        },
        {
            "name": "Set Default Card",
            "request": {
                "method": "PATCH",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{tempToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/payment-methods/REPLACE_WITH_ID/default",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "payment-methods",
                        "REPLACE_WITH_ID",
                        "default"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Delete Card",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{tempToken}}"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/payment-methods/REPLACE_WITH_ID",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "payment-methods",
                        "REPLACE_WITH_ID"
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "tempToken",
            "value": "YOUR_JWT_TOKEN",
            "type": "string"
        }
    ]
}