{
    "info": {
        "_postman_id": "text-image-messaging-v1",
        "name": "Text + Image Messaging System",
        "description": "API Collection for sending messages with text and images support.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Customer to Provider (Text + Image)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "receiverId",
                            "value": "REPLACE_WITH_PROVIDER_ID",
                            "type": "text"
                        },
                        {
                            "key": "text",
                            "value": "Here is the image you asked for.",
                            "type": "text"
                        },
                        {
                            "key": "image",
                            "type": "file",
                            "src": []
                        }
                    ]
                },
                "url": {
                    "raw": "{{baseUrl}}/chat/message/customer-to-provider",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "chat",
                        "message",
                        "customer-to-provider"
                    ]
                },
                "description": "Send a message with an optional image from Customer to Provider."
            },
            "response": []
        },
        {
            "name": "2. Provider to Admin (Text + Image)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "receiverId",
                            "value": "REPLACE_WITH_ADMIN_ID",
                            "type": "text"
                        },
                        {
                            "key": "text",
                            "value": "Reporting an issue with this order.",
                            "type": "text"
                        },
                        {
                            "key": "image",
                            "type": "file",
                            "src": []
                        }
                    ]
                },
                "url": {
                    "raw": "{{baseUrl}}/chat/message/provider-to-admin",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "chat",
                        "message",
                        "provider-to-admin"
                    ]
                },
                "description": "Send a message with an optional image from Provider to Admin."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api",
            "type": "string"
        },
        {
            "key": "token",
            "value": "YOUR_JWT_TOKEN",
            "type": "string"
        }
    ]
}