{
  "info": {
    "name": "Google OAuth Authentication System",
    "description": "Complete Google OAuth 2.0 authentication with step-up verification, session management, and audit logging",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "sessionId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Google OAuth - Customer",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data.session) {",
                  "        pm.collectionVariables.set('accessToken', response.data.session.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', response.data.session.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"idToken\": \"PASTE_YOUR_GOOGLE_ID_TOKEN_HERE\",\n  \"requestedRole\": \"CUSTOMER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/google",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "google"]
            },
            "description": "Authenticate as CUSTOMER using Google OAuth.\n\nTo get a Google idToken:\n1. Go to https://developers.google.com/oauthplayground/\n2. Select 'Google OAuth2 API v2'\n3. Check 'email' and 'profile' scopes\n4. Click 'Authorize APIs'\n5. Exchange authorization code for tokens\n6. Copy the 'id_token' value"
          },
          "response": []
        },
        {
          "name": "Google OAuth - Provider (Requires Step-Up)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.requiresStepUp) {",
                  "        console.log('Step-up verification required. Check your email for OTP.');",
                  "    } else if (response.data.session) {",
                  "        pm.collectionVariables.set('accessToken', response.data.session.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', response.data.session.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"idToken\": \"PASTE_YOUR_GOOGLE_ID_TOKEN_HERE\",\n  \"requestedRole\": \"PROVIDER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/google",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "google"]
            },
            "description": "Authenticate as PROVIDER using Google OAuth.\n\nThis will trigger step-up verification and send an OTP to your email."
          },
          "response": []
        },
        {
          "name": "Verify Step-Up OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data.session) {",
                  "        pm.collectionVariables.set('accessToken', response.data.session.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', response.data.session.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"your-email@example.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/google/verify-stepup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "google", "verify-stepup"]
            },
            "description": "Verify the OTP sent to your email for PROVIDER access.\n\nCheck your email for the 6-digit code."
          },
          "response": []
        },
        {
          "name": "Refresh Access Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            },
            "description": "Refresh the access token using the refresh token.\n\nThis implements token rotation for security."
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Session Management",
      "item": [
        {
          "name": "Get All Active Sessions",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data.sessions && response.data.sessions.length > 0) {",
                  "        pm.collectionVariables.set('sessionId', response.data.sessions[0].id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "sessions"]
            },
            "description": "Get all active sessions for the authenticated user.\n\nShows device information, location, and last activity."
          },
          "response": []
        },
        {
          "name": "Revoke Specific Session",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/sessions/{{sessionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "sessions", "{{sessionId}}"]
            },
            "description": "Revoke a specific session (logout from specific device).\n\nUse the sessionId from 'Get All Active Sessions'."
          },
          "response": []
        },
        {
          "name": "Revoke All Sessions (Global Logout)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "sessions"]
            },
            "description": "Revoke all sessions for the user (logout from all devices).\n\nUseful for security incidents or password changes."
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Legacy Email Auth (Existing)",
      "item": [
        {
          "name": "Email Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"role\": \"CUSTOMER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "signup"]
            },
            "description": "Legacy email/password signup (still supported)"
          },
          "response": []
        },
        {
          "name": "Email Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data.session) {",
                  "        pm.collectionVariables.set('accessToken', response.data.session.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', response.data.session.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Legacy email/password login (still supported)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "4. Protected Routes (Examples)",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "profile"]
            },
            "description": "Example protected route - requires authentication"
          },
          "response": []
        },
        {
          "name": "Provider Dashboard (Provider Only)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/provider/dashboard",
              "host": ["{{baseUrl}}"],
              "path": ["api", "provider", "dashboard"]
            },
            "description": "Example PROVIDER-only route - requires PROVIDER role"
          },
          "response": []
        }
      ]
    }
  ]
}
