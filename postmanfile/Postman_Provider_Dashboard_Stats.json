        "description": "API requests for Provider Dashboard including order status summaries",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get Dashboard Overview",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{provider_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/dashboard/overview",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "dashboard",
                        "overview"
                    ]
                },
                "description": "Returns counts for all order statuses (Pending, Preparing, Ready, Completed, Cancelled) along with total revenue and average rating."
            },
            "response": []
        },
        {
            "name": "Get Unified Dashboard Data",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{provider_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/dashboard",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "dashboard"
                    ]
                },
                "description": "Returns complete dashboard dataset including overview stats, recent orders, revenue analytics, and popular dishes."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "provider_token",
            "value": "YOUR_PROVIDER_JWT_TOKEN_HERE",
            "type": "string"
        }
    ]
