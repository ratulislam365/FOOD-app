          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"receiverId\": \"65f1234567890abcdef12345\",\n  \"text\": \"Hello! I have a question about my order.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/message/customer-to-provider",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "message", "customer-to-provider"]
            }
          }
        },
        {
          "name": "Send Text Message (Provider to Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
