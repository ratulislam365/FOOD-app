  ],
  "item": [
    {
      "name": "ðŸ“ Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const res = pm.response.json();",
                  "    if (res.success && res.data) {",
                  "        pm.collectionVariables.set('token', res.data.token);",
                  "        if (res.data.user) {",
                  "            pm.collectionVariables.set('userId', res.data.user._id || res.data.user.id);",
                  "        }",
                  "        console.log('âœ… Token saved:', res.data.token.substring(0, 30) + '...');",
                  "        console.log('ðŸ‘¤ User ID:', pm.collectionVariables.get('userId'));",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "ðŸ“ Conversations",
      "item": [
        {
          "name": "1. Get All Conversations (Inbox)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const res = pm.response.json();",
                  "    if (res.success && res.data && res.data.length > 0) {",
                  "        pm.collectionVariables.set('conversationId', res.data[0].id);",
                  "        console.log('âœ… Conversation ID saved:', res.data[0].id);",
                  "        console.log('ðŸ“Š Total conversations:', res.data.length);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/chat/conversations",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "conversations"]
            }
          }
        },
        {
          "name": "2. Start New Conversation",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const res = pm.response.json();",
                  "    if (res.success && res.data) {",
                  "        pm.collectionVariables.set('conversationId', res.data.id);",
                  "        console.log('âœ… Conversation started:', res.data.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"providerId\": \"65f1234567890abcdef12345\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/conversations",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "conversations"]
            }
          }
        },
        {
          "name": "3. Get Single Conversation",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/chat/conversations/{{conversationId}}",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "conversations", "{{conversationId}}"]
            }
          }
        },
        {
          "name": "4. Get Conversation Messages",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const res = pm.response.json();",
                  "    if (res.success && res.data && res.data.length > 0) {",
                  "        pm.collectionVariables.set('messageId', res.data[0].id);",
                  "        console.log('âœ… Message ID saved:', res.data[0].id);",
                  "        console.log('ðŸ“Š Total messages:', res.data.length);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/chat/conversations/{{conversationId}}/messages?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "conversations", "{{conversationId}}", "messages"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "5. Mark Conversation as Read",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/chat/conversations/{{conversationId}}/read",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "conversations", "{{conversationId}}", "read"]
            }
          }
        },
        {
          "name": "6. Archive Conversation",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"ARCHIVED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/conversations/{{conversationId}}/archive",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "conversations", "{{conversationId}}", "archive"]
            }
          }
        }
      ]
    },
    {
      "name": "ðŸ“ Send Messages",
      "item": [
        {
          "name": "Send Text Message (Customer to Provider)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const res = pm.response.json();",
                  "    if (res.success && res.data) {",
                  "        pm.collectionVariables.set('messageId', res.data.messageId);",
                  "        console.log('âœ… Message sent:', res.data.messageId);",
                  "    }",
                  "}"
