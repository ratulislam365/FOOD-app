            "url": {
              "raw": "{{baseUrl}}/chat/message/provider-to-admin",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "message", "provider-to-admin"]
            }
          }
        },
        {
          "name": "Send Text Message (Customer to Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"receiverId\": \"ADMIN_USER_ID\",\n  \"text\": \"I need support with my account.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/chat/message/customer-to-admin",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "message", "customer-to-admin"]
            }
          }
        },
