              ]
            },
            "url": {
              "raw": "{{baseUrl}}/chat/message/customer-to-provider",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "message", "customer-to-provider"]
            }
          }
        },
        {
          "name": "Send Image Only (no text)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "receiverId",
                  "value": "65f1234567890abcdef12345",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/chat/message/customer-to-provider",
              "host": ["{{baseUrl}}"],
              "path": ["chat", "message", "customer-to-provider"]
            }
          }
        }
      ]
    },
