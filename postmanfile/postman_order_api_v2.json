				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    pm.environment.set('orderId', response.data.orderId);",
							"    pm.environment.set('orderTotalPrice', response.data.totalPrice);",
							"}"
