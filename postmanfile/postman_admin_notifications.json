{
    "info": {
        "_postman_id": "d1e2f3g4-h5i6-j7k8-l9m0-n1o2p3q4r5s6",
        "name": "Admin Notifications Management",
        "description": "APIs for administrators to monitor and manage notifications across the platform.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get All Notifications",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{admin_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/admin/notifications?page=1&limit=20",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "admin",
                        "notifications"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "20"
                        }
                    ]
                },
                "description": "Retrieve all notifications generated on the platform (Admin Only)."
            },
            "response": []
        },
        {
            "name": "Broadcast Notification (All Users)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{admin_token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"Platform Update\",\n    \"message\": \"We have scheduled maintenance tonight at 12 AM.\",\n    \"type\": \"SYSTEM\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/admin/notifications/broadcast",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "admin",
                        "notifications",
                        "broadcast"
                    ]
                },
                "description": "Send a notification to every user on the platform."
            },
            "response": []
        },
        {
            "name": "Broadcast to Providers Only",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{admin_token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"New Policy Update\",\n    \"message\": \"Please check the updated kitchen safety guidelines in your dashboard.\",\n    \"targetRole\": \"PROVIDER\",\n    \"type\": \"SYSTEM\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/v1/admin/notifications/broadcast",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "admin",
                        "notifications",
                        "broadcast"
                    ]
                },
                "description": "Send a notification only to users with the PROVIDER role."
            },
            "response": []
        },
        {
            "name": "Delete Notification",
            "request": {
                "method": "DELETE",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{admin_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{baseUrl}}/api/v1/admin/notifications/{{notification_id}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "admin",
                        "notifications",
                        "{{notification_id}}"
                    ]
                },
                "description": "Permanently remove a notification record from the database."
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        }
    ]
}