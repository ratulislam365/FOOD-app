{
    "info": {
        "_postman_id": "notification-system-id",
        "name": "Notification System (EMDR)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Notifications",
            "item": [
                {
                    "name": "Get All Notifications",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/notifications",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "notifications"
                            ]
                        },
                        "description": "Returns categorized NEW and OLD notifications for the authenticated user."
                    },
                    "response": []
                },
                {
                    "name": "Mark Notification as Read",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/notifications/:id/read",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "notifications",
                                ":id",
                                "read"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "65b3..."
                                }
                            ]
                        },
                        "description": "Marks a specific notification as read. Returns 404/403 if ID is invalid or notification belongs to another user."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Order Status Triggers",
            "item": [
                {
                    "name": "Create Order (Trigger Pending)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customerToken}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"providerId\": \"65b2...\",\n    \"items\": [\n        {\n            \"foodId\": \"65b1...\",\n            \"quantity\": 2,\n            \"price\": 15.5\n        }\n    ],\n    \"totalPrice\": 31.0,\n    \"paymentMethod\": \"CASH\",\n    \"logisticsType\": \"DELIVERY\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/orders",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Accept Order (Trigger Preparing)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{providerToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/orders/:orderId/accept",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders",
                                ":orderId",
                                "accept"
                            ],
                            "variable": [
                                {
                                    "key": "orderId",
                                    "value": "ORD-123"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Mark Ready (Trigger Ready For Pickup)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{providerToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/orders/:orderId/ready",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders",
                                ":orderId",
                                "ready"
                            ],
                            "variable": [
                                {
                                    "key": "orderId",
                                    "value": "ORD-123"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Mark Picked Up (Trigger Picked Up)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{providerToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/orders/:orderId/complete",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders",
                                ":orderId",
                                "complete"
                            ],
                            "variable": [
                                {
                                    "key": "orderId",
                                    "value": "ORD-123"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Cancel Order (Trigger Cancelled)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/orders/:orderId/cancel",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "orders",
                                ":orderId",
                                "cancel"
                            ],
                            "variable": [
                                {
                                    "key": "orderId",
                                    "value": "ORD-123"
                                }
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ]
}